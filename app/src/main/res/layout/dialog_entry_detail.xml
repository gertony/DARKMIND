<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Fecha de la entrada -->
        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de la Entrada"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Emoción principal -->
        <TextView
            android:id="@+id/tvDetailEmotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emoción: Feliz"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginBottom="16dp"/>

        <!-- Texto de la entrada -->
        <TextView
            android:id="@+id/tvDetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Este es el texto detallado de la entrada del diario. Aquí se describe lo que sucedió y cómo me sentí durante el día."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Desencadenante (si aplica) -->
        <TextView
            android:id="@+id/tvDetailTrigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desencadenante: Un evento inesperado"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Imagen asociada a la entrada -->
        <ImageView
            android:id="@+id/ivDetailImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:background="@color/dark_gray"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Imagen de la entrada"/>

        <!-- Botón para reproducir audio -->
        <Button
            android:id="@+id/btnPlayAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reproducir Audio"
            style="@style/BlackRectangularButton"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/> <!-- Centrar botón de audio -->
    </LinearLayout>
</ScrollView>
