<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Espacio superior para centrar verticalmente el contenido -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Logo de la aplicación -->
    <ImageView
        android:src="@drawable/logo_invert"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="Logo de la aplicación"/>

    <!-- Campo de Correo Electrónico -->
    <EditText
        android:id="@+id/etEmail"
        android:hint="Correo"
        android:backgroundTint="@color/gray"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:padding="12dp"
        android:singleLine="true"/>

    <!-- Campo de Contraseña -->
    <EditText
        android:id="@+id/etPassword"
        android:hint="Contraseña"
        android:backgroundTint="@color/gray"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:padding="12dp"
        android:singleLine="true"/>

    <!-- Botón de Iniciar Sesión -->
    <Button
        android:id="@+id/btnLogin"
        android:text="Iniciar sesión"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        style="@style/BlackRectangularButton"/>

    <!-- Texto para ir a la pantalla de registro -->
    <TextView
        android:id="@+id/tvGoToRegister"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/register_text"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Botón de Iniciar Sesión con Google -->
    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión con Google"
        android:drawableStart="@drawable/google_small_icon"
        android:layout_marginTop="24dp"
        style="@style/WhiteRectangularButton"
        android:drawablePadding="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>

    <!-- Espacio inferior para centrar verticalmente el contenido -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
