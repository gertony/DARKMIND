<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Espacio superior para centrar verticalmente el contenido -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Logo de la aplicación -->
    <ImageView
        android:src="@drawable/logo_invert"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="Logo de la aplicación"/>

    <!-- Campo de Correo Electrónico -->
    <EditText
        android:id="@+id/etEmail"
        android:hint="Correo"
        android:backgroundTint="@color/gray"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:padding="12dp"
        android:singleLine="true"/>

    <!-- Campo de Contraseña -->
    <EditText
        android:id="@+id/etPassword"
        android:hint="Contraseña"
        android:backgroundTint="@color/gray"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:padding="12dp"
        android:singleLine="true"/>

    <!-- Campo de Confirmar Contraseña -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:hint="Confirmar contraseña"
        android:backgroundTint="@color/gray"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:padding="12dp"
        android:singleLine="true"/>

    <!-- Botón de Registrarse -->
    <Button
        android:id="@+id/btnRegister"
        android:text="Registrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        style="@style/BlackRectangularButton"/>

    <!-- Texto para ir a la pantalla de inicio de sesión -->
    <TextView
        android:id="@+id/tvGoToLogin"
        android:text="¿Ya tienes cuenta? Inicia sesión"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"/>

    <!-- Espacio inferior para centrar verticalmente el contenido -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
